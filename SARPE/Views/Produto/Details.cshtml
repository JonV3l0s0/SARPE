@using SARPE.DTO
@using SARPE.Extensions;
@model ProdutoDetalheViewModel

@{
	ProdutoEditarDTO produtoDTO = Model.ToEditarDTO();
}

<form id="editarProdutoForm" name="editarProduto" method="post" asp-action="Edit" role="form" asp-route-id="@Model.Id">
	<div class="col-6">
		<div class="row g-2">
			<div class="col-12">
				<label asp-for="@produtoDTO.Nome" class="form-label"></label>
				<input name="Nome" asp-for="@produtoDTO.Nome" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@produtoDTO.Descricao" class="form-label"></label>
				<input name="Descricao" asp-for="@produtoDTO.Descricao" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@produtoDTO.Preco" class="form-label"></label>
				<input name="Preco" asp-for="@produtoDTO.Preco" class="form-control" />
				<span asp-validation-for="@produtoDTO.Preco" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="Lote" class="form-label"></label>
				<input asp-for="Lote" class="form-control" disabled readonly />
			</div>
		</div>
		<div class="mt-2">
				<input id="btnEditarProduto" type="submit" class="btn btn-success" value="Atualizar Produto" />
				<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar Produto</a>
		</div>
	</div>
</form>

