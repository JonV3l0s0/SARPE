<form id="editarProdutoForm" name="editarProduto" method="post" asp-action="Edit" role="form" asp-route-id="@Model.Id">
	<div class="col-6">
		<div class="row g-2">
			<!--Provavelmente vou add o cod de barras e lote para serem editáveis-->
			<div class="col-12">
				<label asp-for="@nfDTO.NumeroNf" class="form-label">Número NF</label>
				<input name="NumeroNf" asp-for="@nfDTO.NumeroNf" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@nfDTO.SerieNf" class="form-label">Série NF</label>
				<input name="SerieNf" asp-for="@nfDTO.SerieNf" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@nfDTO.DataEmissao" class="form-label">Data emissão</label>
				<input name="DataEmissao" asp-for="@nfDTO.DataEmissao" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@nfDTO.DataEntrada" class="form-label">Data entrada</label>
				<input name="DataEntrada" asp-for="@nfDTO.DataEntrada" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@nfDTO.ValorNf" class="form-label">Valor NF</label>
				<input name="ValorNf" asp-for="@nfDTO.ValorNf" class="form-control" />
			</div>
			<div class="col-12">
				<label asp-for="@nfDTO.Fornecedor" class="form-label">Fornecedor</label>
				<input name="Fornecedor" asp-for="@nfDTO.Fornecedor" class="form-control" />
			</div>
		</div>
		<div class="mt-2">
			<input id="btnEditarProduto" type="submit" class="btn btn-success" value="Atualizar Produto" />
			<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar Produto</a>
		</div>
	</div>
</form>

